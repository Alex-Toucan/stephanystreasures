---
import Card from './Card.astro';
import products from '../../public/data/products.json';
---

<div class="px-0 my-5">
  <div class="row g-4">
    {products.map(product => (
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <Card product={product} />
      </div>
    ))}
  </div>
</div>
